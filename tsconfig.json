{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "rootApp/*": [
        "src/app/*"
      ]
    }
  },
  "include": [
    "./src/app/**/*",
    "./test/__mocks__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "rootApp/*": [
        "src/app/*"
      ]
    }
  },
  "include": [
    "./app/**/*",
    "./__mocks__/**/*"
  ]
}
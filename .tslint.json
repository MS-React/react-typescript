{
  "extends": [
    "tslint-eslint-rules"
  ],
  "rules": {
    "indent": [ true, "spaces" ],
    "max-line-length": [ true, 120 ],
    "ter-indent": [false, 2],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "semicolon": [true, "always"],
    "triple-equals": [ true, "allow-null-check" ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}

